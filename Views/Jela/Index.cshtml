@model IEnumerable<ProjekatRestoran.Models.Meni>

	

	<div class="container p-3">
		<div class="row pt-4">
			<div class="col-6">
				<h2 class="text-primary">Meni</h2>
			</div>
		</div>
		<br />

		@if(Model.Count()>0){
			<table class="table table-bordered table-striped" style="width=100%">
				<thead>
					<tr>
						<th>
							Naziv jela
						</th>
						<th>
							Cijena
						</th>
					
					</tr>
				</thead>
				<tbody>
					@foreach(var jelo in Model){
						<tr>
						<td width="50%">@jelo.NazivJela</td>
							<td width="50%">@jelo.Cijena</td>
							
						</tr>
					}
				</tbody>
			</table>
		}
		else{
			<p>Nema dodanih jela</p>
		}

	</div>

