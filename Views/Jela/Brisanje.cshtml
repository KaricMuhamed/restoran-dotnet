@model IEnumerable<ProjekatRestoran.Models.Meni>

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Meni</h2>
		</div>
	</div>
	<br />

	@if (Model.Count() > 0)
	{
		<table class="table table-bordered table-striped" style="width=100%">
			<thead>
				<tr>
					<th>
						Naziv jela
					</th>
					<th>
						Cijena
					</th>
					<th>
						Poruci
					</th>

				</tr>
			</thead>
			<tbody>
				@foreach (var jelo in Model)
				{
					<tr>
						<td width="30%">@jelo.NazivJela</td>
						<td width="30%">@jelo.Cijena</td>
						<td width="30%">
								<a asp-controller="Jela" asp-action="Update" asp-route-Id="@jelo.Id" class="btn btn-info mx-1">Update</a>
								<a asp-controller="Jela" asp-action="Delete" asp-route-Id="@jelo.Id" class="btn btn-danger mx-1">Delete</a>
					</td>

					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<p>Nema dodanih jela</p>
	}

</div>



@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
	}
	